{
  "name": "comet-swap-nx",
  "version": "1.0.0",
  "description": "CometSwap - Advanced DeFi Trading Platform with Stellar UI System",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npx nx run-many --target=build --all --parallel=3",
    "dev": "npx nx run-many --target=dev --all --parallel=3",
    "test": "npx nx run-many --target=test --all --parallel=3",
    "lint": "npx nx run-many --target=lint --all --parallel=3",
    "typecheck": "npx nx run-many --target=typecheck --all --parallel=3",
    "clean": "npx nx reset && rm -rf node_modules packages/*/node_modules apps/*/node_modules",
    "stellar:check": "node -e \"console.log('ðŸŒŸ Stellar UI System:', require('./packages/uikit/src/stellar').checkStellarHealth())\"",
    "web": "npx nx run web:dev",
    "web:build": "npx --no-install nx run web:build",
    "uikit:dev": "npx nx run uikit:dev",
    "uikit:build": "npx nx run uikit:build"
  },
  "dependencies": {
    "nx": "^19.0.0",
    "@nx/js": "^19.0.0",
    "@nx/next": "^19.0.0",
    "@nx/workspace": "^19.0.0",
    "typescript": "^5.3.0",
    "@styled-system/should-forward-prop": "^5.1.5",
    "@tamagui/animations-react-native": "^1.136.6",
    "@tamagui/config": "^1.136.6",
    "@tamagui/core": "^1.136.6",
    "@tamagui/font-inter": "^1.136.6",
    "@tamagui/helpers-icon": "^1.136.6",
    "@tamagui/portal": "^1.136.6",
    "@tamagui/theme-base": "^1.136.6",
    "bignumber.js": "^9.0.0",
    "next": "^14.2.33",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "styled-system": "^5.1.5",
    "tamagui": "^1.136.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@nx/react": "^19.0.0",
    "@nx/vite": "^19.0.0",
    "@nx/webpack": "^19.0.0",
    "@popperjs/core": "^2.11.8",
    "@types/lodash": "^4.14.168",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.0.0",
  "keywords": [
    "defi",
    "swap",
    "stellar-ui",
    "tamagui",
    "nx-monorepo",
    "zero-runtime",
    "compile-time-optimization"
  ],
  "author": "CometSwap Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cometswap/comet-swap-nx.git"
  }
}




