{
  "name": "@comet-swap/core-config",
  "version": "0.1.0",
  "description": "Core configuration for chains, contracts, and tokens",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "viem": "^2.21.45"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./chains": {
      "types": "./src/chains/index.ts", 
      "default": "./src/chains/index.ts"
    },
    "./contracts": {
      "types": "./src/contracts/index.ts",
      "default": "./src/contracts/index.ts"
    },
    "./tokens": {
      "types": "./src/tokens/index.ts",
      "default": "./src/tokens/index.ts"
    },
    "./logos": {
      "types": "./src/logos/index.ts",
      "default": "./src/logos/index.ts"
    }
  },
  "publishConfig": {
    "access": "restricted"
  }
}
