{
  "name": "@comet-swap/core-config",
  "version": "0.1.0",
  "description": "Core configuration for chains, contracts, and tokens",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "viem": "^2.21.45"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./chains": {
      "types": "./dist/chains/index.d.ts", 
      "default": "./dist/chains/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "default": "./dist/contracts/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "default": "./dist/tokens/index.js"
    },
    "./logos": {
      "types": "./dist/logos/index.d.ts",
      "default": "./dist/logos/index.js"
    }
  },
  "publishConfig": {
    "access": "restricted"
  }
}
