{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": false,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": false,
    "jsx": "react-jsx",
    "target": "es2020",
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "styled-system": ["./src/styled-system"],
      "styled-system/*": ["./src/styled-system/*"],
      "@styled-system/should-forward-prop": ["./src/stellar/runtime/should-forward-prop"],
      "styled-components": ["./src/styled-components"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules", 
    "src/**/*.stories.tsx", 
    "src/**/*.test.tsx", 
    "src/**/__tests__/**",
    "src/testHelpers.tsx",
    "src/stellar/vite-plugin.ts",
    "src/theme/index.ts",
    "src/css/**",
    "src/components/TreeSelect/**",
    "src/components/Tooltip/theme.ts",
    "src/components/Tag/theme.ts",
    "src/components/Swap/SwapInterface.tsx",
    "src/components/Svg/**",
    "src/components/SubMenuItems/**",
    "src/components/DropdownMenu/**",
    "src/components/Row/**",
    "src/components/RoiCalculatorModal/**",
    "src/components/MultiSelect/**",
    "src/components/ReactMarkdown/**",
    "src/components/Footer/**",
    "src/components/Column/**",
    "src/hooks/useDialog/**",
    "src/hooks/useTooltip/**"
  ]
}
